{
  "name": "DownTube",
  "version": "1.0.1",
  "description": "A Youtube Videos and Playlist Downloader Application",
  "main": "index.js",
  "author": "Ali Khan Jalbani",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ali.downtube",
    "productName": "DownTube",
    "copyright": "Copyright Â© 2025 Ali Khan",
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "renderer/icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!*.map",
      "!yt-dlp.exe",
      "!ffmpeg.exe",
      "!dist/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "renderer/icon.ico",
      "uninstallerIcon": "renderer/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DownTube",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "sanitize-filename": "^1.6.3"
  }
}
